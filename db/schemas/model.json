{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "uuid": {
      "id": "#uuid",
      "description": "Universal accessible name of the model, cannot be change after created"
    },
    "name": {
      "id": "#name",
      "description": "Universal accessible name of the model, cannot be change after created",
      "type": "string"
    },
    "schema": { 
      "id": "#schema"
    },
    "indexes" : {
      "id": "#indexes",      
      "description": "Database index definitions",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cols": { 
            "type": "object",
            "patternProperties": {
              ".{1,}": { 
                "type": "string"
              }
            }
          }, 
          "unique": { "type": "boolean" },     
          "concurrently": { "type": "boolean" }
        },
        "required": ["cols"]
      },
      "minItems": 1,
      "maxItems": 10
    },
    "hooks": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/hook"
      }
    }
  },
  "required": ["name"],
  "readonly_attributes": ["name"],
  "unique_attributes": ["name"],
  "definitions": {
    "hook":{
      "id": "#hook",
      "description": "Async jobs for after callbacks",
      "type": "object",
      "patternProperties": {
        "after_[create|update|destroy]" : {
          "type": "array",
          "items": {
            "type" : "object",
            "properties": {
              "name": { "type": "string" }, 
              "run_at": { "type": "date" }, 
              "conditions": { 
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "required": ["name"]  
          },
          "minItems": 1,
          "maxItems": 20
        }
      } 
    }
  }
}